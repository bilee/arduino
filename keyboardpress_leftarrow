#include <Keyboard.h>

// Arduino Leonardo: Send key when a button is pressed.

void setup() {
  pinMode(2, INPUT_PULLUP);
  Keyboard.begin();
}

void loop() {
  //if the button is pressed
  if(digitalRead(2)==HIGH){
    // e.g. Apple's CMD key
    // Keyboard.press(KEY_LEFT_GUI);
    Keyboard.press(KEY_LEFT_ARROW);
    delay(100);
    Keyboard.releaseAll();
    delay(200);
  }
}
